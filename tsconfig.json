{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ]
}